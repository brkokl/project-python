x= [[1,'a',['cat'],2],[[[3]],'dog'],4,5]  
b= []
def duzlestirme(x):
    
    for i in x:
        if isinstance(i, list):
            duzlestirme (i)
        else:
           b.append(i)

duzlestirme(x)
print (b)


a = [[1, 2], [3, 4], [5, 6, 7]]

def terscevirme(a):
    b= a[::-1]
    for i in b:
        i.sort(reverse=True)
    print(b)
    
terscevirme(a)

